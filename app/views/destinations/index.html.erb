<h1>Destinations</h1>

<br>
    <%= link_to "Most Popular Destination", destinations_most_popular_path() %>
<br><br>

<%= form_tag(destinations_path, method: "get") do %>
    <div class="field form-group">
        <%= text_field_tag :search, "", placeholder: "Search destinations", class: "form-control" %>
    </div>

    <%= submit_tag "Search" %><br><br>
<% end %>

    <ul>
        <% @destinations.each do |destination| %>
            <li><%= "#{destination.format_location}" %></li>
        <% end %>
    </ul>
<%= form_for @trip do |f| %>
    <% if @trip.errors.any? %>
        <div id="error_explanation">
            <%= @trip.errors.full_messages.join(". ") %>
        </div>
    <% end %>

    <div class="field<%= ' field_with_errors' if @trip.errors[:title].any? %>">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div><br><br>

    <div class="field<%= ' field_with_errors' if @trip.errors[:start_date].any? %>">
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>
    </div><br><br>

    <div class="field<%= ' field_with_errors' if @trip.errors[:end_date].any? %>">
        <%= f.label :end_date %>
        <%= f.date_field :end_date %>
    </div><br><br>

    <%= f.submit %>
<% end %>
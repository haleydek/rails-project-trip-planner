<%= form_for [@user, @trip], url: user_trips_path, method: "patch" do |f| %>
    <%= fields_for :users_trips do |users_trip_fields| %>
        <%= users_trip_fields.check_box :users_trip_ids, value: :trip_admin %>
        <%= users_trip_fields.label "Permission to edit trip?" %>
    <% end %>
    
    <%= f.submit "Update", { class: "btn btn-outline-primary btn-sm" } %>
<% end %>
<h1>Log In</h1>

<%= form_tag('/login') do %>
    <% if flash[:errors].present? %>
        <div id="error_explanation" class="alert alert-danger" role="alert">
            <%= flash[:errors] %>
        </div>
    <% end %>
<br>
    <div class="form-group field<%= ' field_with_errors' if flash[:errors].present? %>">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control col-sm-2 my-1" %>
    </div><br>

    <div class="form-group field<%= ' field_with_errors' if flash[:errors].present? %>">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control col-sm-2 my-1" %>
    </div><br>

    <%= submit_tag "Log In" %>
<% end %>
<h1>Sign Up</h1>

<%= form_for @user, url: signup_path do |f| %>
    <% if @user.errors.any?%>
        <div id="error_explanation class="alert alert-danger" role="alert">
            <%= @user.errors.full_messages.join(". ")%>
        </div>
    <% end %>
<br>
    <div class="form-group field<%= ' field_with_errors' if @user.errors[:name].any? %>">
        <%= f.label :name %>
        <%= f.text_field :name, { class: "form-control col-sm-2 my-1" } %>
    </div><br>

    <div class="form-group field<%= ' field_with_errors' if @user.errors[:email].any? %>">
        <%= f.label :email %>
        <%= f.text_field :email, { class: "form-control col-sm-2 my-1" } %>
    </div><br>

    <div class="form-group field<%= ' field_with_errors' if @user.errors[:password].any? %>">
        <%= f.label :password %>
        <%= f.password_field :password, { class: "form-control col-sm-2 my-1" } %>
    </div><br>

    <%= f.submit "Create Account" %>
<% end %>